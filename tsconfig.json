{
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        "outDir": "dist",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": ["ES2015", "DOM"]
    },
    "include": [
        "src/**/*.ts",
        "__tests__/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}